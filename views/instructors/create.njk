{% extends 'layout.njk' %}

{% block content %}

    <form class="card" method="POST" action="/instructors">

        <section class="avatar"></section>
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Avatar URL</div>
                <input type="url" name="avatar_url" placeholder="https://">
            </div>
            <div class="item">
                <div>Nome Completo</div>
                <input type="text" name="name" placeholder="Digite o seu nome">
            </div>
             <div class="item">
                <div>Data de Nascimento</div>
                <input type="date" name="birth">
            </div>
            <div class="item">
                <div>Sexo</div>
                <span><input type="radio" name="gender" value="M" checked>Masculino</span>
                <span><input type="radio" name="gender" value="F">Feminino</span>
            </div>
             <div class="item">
                <div>Acompanhamento</div>
                <input type="text"name="services"placeholder="Separe os serviços prestados por vírgula">
            </div>

            <button type="submit">Salvar</button>
        </section>
    </div>
{% endblock content %}